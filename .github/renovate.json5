{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends":[
    "config:base",
    "dependencyDashboardApproval": true
  ],
  "argocd": {
    "fileMatch":[
      "manifest/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "manifest/.+\\.yaml$",
      "bootstrap/.+\\.yaml$"
    ]
  }
}