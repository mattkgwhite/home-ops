{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends":[
    "config:base"
  ],
  "enabled": true,
  "timezone": "UTC",
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "argocd": {
    "fileMatch":[
      "manifest/.+\\.yaml$",
      "manifest/argo-projects/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "manifest/.+\\.yaml$",
      "bootstrap/.+\\.yaml$"
    ]
  }
}