{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "timezone": "UTC",
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "requiredStatusChecks": null,
  "commitMessageSuffix": "[ci-skip]",
  "commitBody": "Signed-off-by: Matt White <krangence@users.noreply.github.com>",
  "suppressNotifications": ["prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "assignees": ["@mattkgwhite"],
  "helm-values": {
    "fileMatch": ["./.+\\.yaml$"]
  },
  "argocd": {
    "fileMatch": [
      "manifest/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "manifest/.+\\.yaml$",
      "bootstrap/.+\\.yaml$",
      "apps/.+\\.yaml$",
      "core/.+\\.yaml$",
      "services/.+\\.yaml$"
    ]
  },
  customManagers: [
    {
      customType: "regex",
      fileMatch: ["kustomization.ya??ml$"],
      matchStrings: [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\n*[^/]+://[^/]+/[^/]+/[^/]+/(?<currentValue>[^/]+)/",
      ],
    },
    {
      customType: "regex",
      fileMatch: ["env.sh"],
      datasourceTemplate: "helm",
      matchStrings: [
        'HELM_REPO_SOURCE="(?<registryUrl>[^"]+)"\n*[^"]+"(?<depName>[^"]+)"\n*[^"]+"(?<currentValue>[^"]+)',
      ],
    },
  ],
}